<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.made.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_detailActivity"
            app:destination="@id/detailActivity" />
        <action
            android:id="@+id/action_homeFragment_to_favoriteActivity"
            app:destination="@id/favoriteActivity" />
    </fragment>

    <activity
        android:id="@+id/detailActivity"
        android:name="com.example.made.ui.detail.DetailActivity"
        android:label="Detail">
        <argument
            android:name="gameId"
            app:argType="integer" />
    </activity>

    <activity
        android:id="@+id/favoriteActivity"
        android:name="com.example.favorites.FavoriteActivity"
        android:label="Favorite" />

</navigation>